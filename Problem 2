#include <iostream>
#include <conio.h>

using namespace std;

int main()
{
    int A[7];
    int B[7];
    int C[7];


    for (int i=0; i<7; i++)
    {
        cout << "Enter Temperature for Province A, Day " << i+1 << ": ";
        cin >> A[i];
    }
    for (int i=0; i<7; i++)
    {
        cout << "Enter Temperature for Province B, Day " << i+1 << ": ";
        cin >> B[i];
    }
    for (int i=0; i<7; i++)
    {
        cout << "Enter Temperature for Province C, Day " << i+1 << ": ";
        cin >> C[i];
    }

    cout << "\r" << endl;
    cout << "Displaying Values: " << endl;

    for (int i=0; i<7; i++)
    {
        cout << "Province A, Day " << i+1 << ": " << A[i] << endl;
    }
    for (int i=0; i<7; i++)
    {
        cout << "Province B, Day " << i+1 << ": " << B[i] << endl;
    }
    for (int i=0; i<7; i++)
    {
        cout << "Province C, Day " << i+1 << ": " << C[i] << endl;
    }

    _getch();
    return 0;
}
